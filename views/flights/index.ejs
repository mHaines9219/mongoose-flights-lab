<%- include('../partials/header') %>

    <h2>Flight List</h2>
    <table>
        <thead>
            <tr>
                <th>Airline</th>
                <th>Airport</th>
                <th>Flight No</th>
                <th>Departs</th>
                <th>Destination</th>
            </tr>
        </thead>
        <tbody>
            <% flights.forEach(function(f){%>


                <!-- Write the line of EJS to iterate over movies using forEach -->
                <tr>
                    <td>
                        <%= f.airline %>
                    </td>
                    <td>
                        <%= f.airport %>
                    </td>
                    <td>
                        <%= f.flightNo %>
                    </td>
                    <td>
                        <%= f.departs %>
                    </td>
                    <td>
                        <% f.destination.forEach(function(dest) { %>
                            <p><strong>Airport:</strong>
                                <%= dest.airport %>
                            </p>
                            <p><strong>Arrival:</strong>
                                <%= dest.arrival %>
                            </p>
                            <% }); %>
                    </td>
                    <td><a href="/flights/<%= f._id%>/">DETAILS</a></td>

                </tr>
                <% }) %>
                    <!-- Close the forEach using EJS here -->
        </tbody>
    </table>

    <%- include('../partials/footer') %>